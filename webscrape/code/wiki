import wikipediaapi
from pathlib import Path

RAW_DIR = Path("data/raw_text")
RAW_DIR.mkdir(parents=True, exist_ok=True)

wiki = wikipediaapi.Wikipedia(
    language="en",
    user_agent="cipher-language-project"
)

def scrape_wikipedia(title):
    page = wiki.page(title)

    if not page.exists():
        print(f"Page not found: {title}")
        return

    filename = title.replace(" ", "_") + ".txt"
    out_file = RAW_DIR / filename
    out_file.write_text(page.text, encoding="utf-8")

    print(f"Saved wiki page -> {filename}")

scrape_wikipedia("Cryptography")
scrape_wikipedia("Linguistics")
